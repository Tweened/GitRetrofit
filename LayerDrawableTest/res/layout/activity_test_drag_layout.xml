<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/layer_drawable_iv"
        android:layout_width="280dp"
        android:layout_height="300dp"
        android:src="@drawable/green_rect_cubic"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal">
        <com.mina.widgets.DragerLayout
            xmlns:drag="http://schemas.android.com/apk/res-auto"
            android:id="@+id/options_drawable_dl"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:padding="3dp"
            drag:optionsNum="4">

            <com.mina.widgets.DragerView
                android:id="@+id/option_black_dv"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/black_rect_cubic"/>

            <com.mina.widgets.DragerView
                android:layout_marginTop="6dp"
                android:id="@+id/option_red_dv"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/red_rect_cubic"/>

            <com.mina.widgets.DragerView
                android:layout_marginTop="6dp"
                android:id="@+id/option_green_dv"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/green_rect_cubic"/>

            <com.mina.widgets.DragerView
                android:layout_marginTop="6dp"
                android:id="@+id/option_blue_dv"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/blue_rect_cubic"/>

        </com.mina.widgets.DragerLayout>
    </LinearLayout>


</LinearLayout>
